            <td class="blob-code">    <span class="hljs-keyword">public</span> <span class="hljs-function"><span class="hljs-keyword">function</span> <span class="hljs-title">setPlainPassword</span><span class="hljs-params">($plainPassword)</span></td>
            </tr>
