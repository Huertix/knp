            </tr>
    <tr>
                    <td class="line-number line-number-displayed" data-line-number-displayed="5"></td>
            <td class="blob-code">    </span><span class="hljs-template-variable">{{ form_widget(genusForm.name) }}</span><span class="xml"></td>
            </tr>
    <tr>
                    <td class="line-number line-number-displayed" data-line-number-displayed="6"></td>
            <td class="blob-code">    </span><span class="hljs-template-variable">{{ form_errors(genusForm.name) }}</span><span class="xml"></td>
            </tr>
    <tr>
                    <td class="line-number line-number-expandable" data-range="7-16" data-last="0">
                <i class="fa fa-arrows-v js-icon-load-more" data-toggle="tooltip" title="Show Lines" data-placement="left"></i>
                <i class="fa fa-spinner fa-spin js-icon-loading"></i>
            </td>
