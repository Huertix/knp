            <td class="blob-code">        <span class="hljs-keyword">$this</span>-&gt;studiedGenuses-&gt;removeElement($genus);</td>
            </tr>
    <tr>
                    <td class="line-number line-number-displayed" data-line-number-displayed="241"></td>
            <td class="blob-code">        $genus-&gt;removeGenusScientist(<span class="hljs-keyword">$this</span>);</td>
            </tr>
    <tr>
                    <td class="line-number line-number-displayed" data-line-number-displayed="242"></td>
            <td class="blob-code">    }</td>
            </tr>
