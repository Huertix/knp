        Core.courseTitle = 'Lean and Mean Dev with PhpStorm (for Symfony)';
        Core.courseId = 66
        Core.courseIsOwned = true;
        Core.courseSlug = 'phpstorm';
                    Core.chapterTitle = 'Forms';
